<odoo>
  <data>        
      <record id="survey_question_form_inherit" model="ir.ui.view">
            <field name="name">Form view for survey question inherited</field>
            <field name="model">survey.question</field>
            <field name = "inherit_id" ref = 'survey.survey_question_form'/>
            <field name="arch" type="xml">
                <xpath expr = "/form/sheet/notebook/page" position = 'inside'>
                    <field name="validate_text" attrs="{'invisible': [('question_type', '!=', 'textbox')]}"/>
                    <label for="validate_text" attrs="{'invisible': [('question_type', '!=', 'textbox')]}"/>
                    <div attrs="{'invisible': [('validate_text', '=', False)]}">
                       <group>
                    <field name="value_validate"/>
                    <field name="answer_score"/>
                        </group>
                    </div>
                </xpath>
          </field>
      </record>
